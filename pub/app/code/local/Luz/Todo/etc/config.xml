<?xml version="1.0"?>
<config>
    <modules>
        <Luz_Todo>
            <version>0.2</version>
        </Luz_Todo>
    </modules>

    <frontend>
        <routers>
            <luz_todo>
                <use>standard</use>
                <args>
                    <module>Luz_Todo</module>
                    <frontName>todo</frontName>
                </args>
            </luz_todo>
        </routers>

        <layout>
            <updates>
                <luz_todo>
                    <file>luz/todo.xml</file>
                </luz_todo>
            </updates>
        </layout>
    </frontend>

    <global>
        <resources>
            <luz_todo_setup>
                <setup>
                    <module>Luz_Todo</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </luz_todo_setup>
        </resources>
    </global>
</config>